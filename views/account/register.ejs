<% if (title) { %>
<h1><%=title%></h1>
<%
} else {
    res.redirect('/')
} %>
<%- messages() %>

<div class="form-wrapper">
    <div class="form-container">
        <form class="form-grid" action="/account/register" method="POST">
            <label for="fname">First Name:</label>
            <input type="text" id="fname" name="account_firstname" required>

            <label for="lname">Last Name:</label>
            <input type="text" id="lname" name="account_lastname" required>

            <label for="email">Email Address:</label>
            <input type="email" id="email" name="account_email" required>

            <label for="password">Password:</label>                                              <!--At least one capital letter, special character and number-->
            <input type="password" id="password" name="account_password" minlength="12" pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*]).+$" required>
            <p class="password-requirement">Passwords must be minimun of 12 characters and include 1 capital letter, 1 number and 1 special character</p> 
            <span id="pswdBtn">Show Password</span>

            <input class="form-button" type="submit" value="Register">

            
        </form>
    </div>
</div>

<!-- JS to show the password -->
<script>
  const pswdBtn = document.querySelector("#pswdBtn");
  pswdBtn.addEventListener("click", function() {
    const pswdInput = document.getElementById("password");
    const type = pswdInput.getAttribute("type");
    if (type === "password") {
      pswdInput.setAttribute("type", "text");
      pswdBtn.innerHTML = "Hide Password";
    } else {
      pswdInput.setAttribute("type", "password");
      pswdBtn.innerHTML = "Show Password";
    }
  });
</script>
