<% if (title) { %>
<h1><%=title%></h1>
<%
} else {
    res.redirect('/')
} %>
<%- messages() %>
 
<div class="form-wrapper">
    <div class="form-container">
        <form class="form-grid" action="/account/login" method="POST">
            <label for="username">Email:</label>
            <input type="email" id="username" name="account_email" required placeholder="Enter a valid email address">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$" required >
            <span class="password-requirement">Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character</span>
            <input class="form-button" type="submit" value="login">   
        </form>
        <p>No account?  <a href="/account/register">Sign-up</a></p> 
    </div>
</div>