<% if (title) { %>
<h1><%=title%></h1>
<%
} else {
    res.redirect('/')
} %>
<%- messages() %>
 
<div class="login-wrapper">
    <div class="form-container">
        <form class="form-grid" action="/account/login" method="POST">
            <label for="username">Email:</label>
            <input type="email" id="username" name="account_email">
            <label for="password">Password:</label>
            <input type="password" id="password" name="account_password">
            <input class="login-button" type="submit" value="login">

            <p>No account?  <a href="/account/register">Sign-up</a></p> 
        </form>
    </div>
</div>