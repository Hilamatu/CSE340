<% if (title) { %>
<h1><%=title%></h1>
<%
} else {
    res.redirect('/')
} %>
<%- messages() %>

<div class="all-users">
<h2>Welcome <%= accountData.account_firstname %></h2>
<!-- Update Account Link (visible to all users) -->
<p>
  <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
</p>
</div>
<!-- Inventory Management Section (only for Admin or Employee) -->
<% if (accountData.account_type === "Admin" || accountData.account_type === "Employee") { %>
  <div class="mgmt-user"><h3>Inventory Management</h3>
  <p>
    <a href="/inv/">Access Inventory Management</a>
  </p></div>
<% } %>
